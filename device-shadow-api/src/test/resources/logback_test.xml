    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/device-shadow.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- hourly rollover -->
            <fileNamePattern>logs/device-shadow.%d{yyyy-MM-dd_HH}.log.gz</fileNamePattern>
            <!-- keep 10 days' worth of history -->
            <maxHistory>240</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%-30(%d %level)- %msg%n%ex</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %c{1} %-5level - %msg
                %ex{full} %n
            </pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="STDOUT"/>
    </appender>


    <root level="${LOG_LEVEL}">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC-GELF"/>

    </root>
    <logger name="org.eclipse.ecsp" level="${IGNITE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.nosqldao" level="${STORAGE_LOG_LEVEL}"
            additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="com.mongodb" level="${STORAGE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.springframework" level="${SPRING_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.device.shadow" level="${SVC_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.eclipse.ecsp.cache" level="${CACHE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.redisson" level="${CACHE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.apache.kafka" level="${KAFKA_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.eclipse.ecsp.stream" level="${STREAM_BASE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="ASYNC-GELF"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.eclipse.ecsp.stream" level="${STREAM_BASE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC-GELF"/>

    </logger>
    <logger name="org.eclipse.ecsp.device" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>

    <logger name="com.codahale.metrics" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>

    <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="ERROR"
            additivity="false">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>

    <logger name="org.apache.http.wire" level="ERROR" additivity="false">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>

    <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestResponseBodyMethodProcessor"
            level="ERROR" additivity="false">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>

    <logger name="org.mongodb.driver.protocol.command" level="ERROR" additivity="false">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
</configuration>